  color $no-data-txt-color
}

.ant-modal-confirm .ant-btn-primary {
  color #fff
  background-color #ff4d4f
  border-color #ff4d4f
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.12)
  box-shadow 0 2px 0 rgba(0, 0, 0, 0.045)
  &:hover,
  &:active,
  &:focus {
    background-color #ff7875
    border-color #ff7875
  }
}

.clearfix:after
  visibility hidden
  display block
  font-size 0
  content ""
  clear both
  height 0

.inline-item
  display inline-block


.self-scroll ::-webkit-scrollbar {
  width:4px;
}
/* 滚动槽 */

.self-scroll ::-webkit-scrollbar-track {
  -webkit-box-shadow:inset006pxrgba(0,0,0,0.3);
  border-radius:10px;
}
/* 滚动条滑块 */

.self-scroll ::-webkit-scrollbar-thumb {
  border-radius:10px;
  background:rgba(255,255,255,0.8);
  -webkit-box-shadow:inset006pxrgba(0,0,0,0.5);
}

.self-scroll ::-webkit-scrollbar-thumb:window-inactive {
  background:rgba(0,0,0,0.4);
}

.page-title
  display inline-block
  border-top 3px solid $text-orange
  color $text-orange
  line-height .42rem
  box-sizing border-box
  padding 0 .2rem
  background linear-gradient(to bottom, #fff, #e7e7e7)

.bg-orange
  background-color $text-orange
  color #fff
.bg-white {
  background-color $theme-bg-color
}
.self-btn
  display inline-block
  border-radius 3px
  text-align center
  line-height .3rem
  cursor pointer
  transition: .2s ease
  &:hover
    opacity .85


.modal-root-c {
  position fixed
  left 0
  top 0
  width 100%
  height 100%
}
