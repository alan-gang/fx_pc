@import "./reset.styl" 
@import "./variables.styl"
@import "./loading.styl"
@import "./animation.styl"
@import "./message.styl"

$base = 100

html {
  font-size 100px
}
body {
  font-size 0.14rem
  background url($page-bg-img) center no-repeat
  background-size 100% 100%
  background-attachment fixed
  font-family Arial,Helvetica,sans-serif
}

.page-view {
  width $page-main-width
  min-height 8.26rem
  margin 0 auto
  background $theme-bg-color
}

pxToRem(px) {
  px / 100
}

for k, v in $colors
  .c-{k}
    color v
  .bgc-{k}
    background-color v

for x in 12 13 14 15 16 18 20 22 24 25 26 28 30 32 35 36 38 40 42 45 46 48 50
  .fs-{x}
    font-size pxToRem(x)rem

for x in -100 -80 -50  -44 -40 -30 -20 -10 -5 -3 -2 0 1 2 3 5 10 15 20 25 30 34 40 44 50 60 70 75 80
  .pd-{x}
    padding pxToRem(x)rem
  .mg-{x}
    margin pxToRem(x)rem

  .mgt-{x}
    margin-top pxToRem(x)rem
  .mgb-{x}
    margin-bottom pxToRem(x)rem
  .mgl-{x}
    margin-left pxToRem(x)rem
  .mgr-{x}
    margin-right pxToRem(x)rem

  .pd-{x}
    padding pxToRem(x)rem
  .pdt-{x}
    padding-top pxToRem(x)rem
  .pdb-{x}
    padding-bottom pxToRem(x)rem
  .pdl-{x}
    padding-left pxToRem(x)rem
  .pdr-{x}
    padding-right pxToRem(x)rem
  
  .pol-{x}
    left pxToRem(x)rem
    
  .por-{x}
    right pxToRem(x)rem
  
  .pot-{x}
    top pxToRem(x)rem
    
  .pob-{x}
    bottom pxToRem(x)rem
  
  .lh-{x}
    line-height pxToRem(x)rem
    
  .hlh-{x}
    height pxToRem(x)rem
    line-height pxToRem(x)rem

.flex {
  display flex
}
.fdr-r {
  flex-direction row
}
.fdr-c {
  flex-direction column
}
.fw-w {
  flex-wrap wrap
}
.jc-c {
  justify-content center
}
.jc-s {
  justify-content start
}
.jc-e {
  justify-content flex-end
}
.ai-c {
  align-items center
}
.hide {
  display none
}
.flt-r {
  float right
}
.flt-l {
  float left
}
.inlb {
  display inline-block
}  
.va-m {
  vertical-align middle
}
.va-t {
  vertical-align top
}
.pos-r {
  position relative
}
.pos-a {
  position absolute
}
.txt-c {
  text-align center
}
.txt-l {
  text-align left
}
.txt-r {
  text-align right
}

cntEl() {
  content ' '
  position absolute
  top 0
  width 200%
  height 200%
  transform scale(0.5)
  background-clip padding-box
  box-sizing border-box
}
.l-cir {
  position relative
  leftCircle()
  &::before {
    leftCircle()
    cntEl()
    transform-origin left top
    left 0
  }
}
.r-cir {
  rightCircle()
  position relative
  &::before {
    rightCircle()
    cntEl()
    transform-origin right top
    right 0
  }
}
.pos-center
  position absolute
  top 50%
  left 50%
  transform translate3d(-50%, -50%, 0)
  
.crs-p {
  cursor pointer
}

