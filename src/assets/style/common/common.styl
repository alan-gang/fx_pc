cntEl() {
  content ' '
  position absolute
  top 0
  width 200%
  height 200%
  transform scale(0.5)
  background-clip padding-box
  box-sizing border-box
}
.l-cir {
  position relative
  leftCircle()
  &::before {
    leftCircle()
    cntEl()
    transform-origin left top
    left 0
  }
}
.r-cir {
  rightCircle()
  position relative
  &::before {
    rightCircle()
    cntEl()
    transform-origin right top
    right 0
  }
}
.pos-center
  position absolute
  top 50%
  left 50%
  transform translate3d(-50%, -50%, 0)
  
.crs-p {
  cursor pointer
}

