.sticky-play-type-change-view {
  width 0.64rem
  position fixed
  top 1.43rem
  z-index 100
  &>header {
    height 0.54rem
    background url('../../assets/images/default/play-change-bg.png') no-repeat
  }
  borderBottomRadius() {
    border-bottom-left-radius 0.03rem
    border-bottom-right-radius 0.03rem
  }
  .play-type-item-ls {
    border-bottom solid 0.03rem $sticky-play-type-item-ls-bg-color
    padding-bottom 0.01rem
    borderBottomRadius()
  }
  .play-type-item {
    width 100%
    height 0.54rem
    background $sticky-play-type-item-bg-color
    font-size 0.13rem
    &.active {
      color $theme-txt-color-4
      background $sticky-play-type-item-active-bg-color
    }
    &:hover {
      opacity 0.9
    }
  }
  .play-type-item:last-child {
    borderBottomRadius()
  }
}
