.game-header-view {
  height 0.8rem
  padding 0 0.12rem
  .game-logo {
    width 2.4rem
    height 100%
    background-position left center
    background-repeat no-repeat
    background-size 2.3rem 0.66rem
    position relative
    for n, i in '1' '29' '150' '17' '21' '3' '35' '161' '155' '157' '156' '4' '152' '153' '6' '11' '7' '8' '22' '36' '37' '38' '46' '39' '13' '43' '151' '162' '23' '24' '25' '26' '33' {
      &.game-header-logo-{n} {
          background-image url('../../assets/images/default/gameheader/ng/' + n + '.png');
      }
      &.game-header-ds-icon-game-wbwfc {
          background-size 1.85rem
      }
    }
  }
  .volumn-switch {
    width 0.18rem
    height 0.16rem
    background-position center
    background-repeat no-repeat
    background-size 100%
    display block
    position absolute
    right 0
    top 0.1rem
    &.open {
      background-image url($game-header-volumn-open-image);
    }
    &.close {
      background-image url($game-header-volumn-close-image);
    }
  }
  .cur-issue-wp {
    padding-right 0.15rem
  }
  .time-wp {
    width 2rem
    height 0.56rem
    box-shadow 0 0 0.1rem rgba(0,0,0, .4) inset
    border-radius 0.05rem
    font-size $game-header-time-font-size
    .hour-wp,
    .minute-wp,
    .second-wp {
      font-weight bold
    }
    .colon {
      width 0.2rem
      text-align center
    }
  }
  .last-issue-num-wp {
    padding 0 0.15rem 0 0.3rem;
  }
}